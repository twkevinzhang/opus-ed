{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "include": [
    "src/main/**/*",
    "src/preload/**/*",
    "src/shared/**/*",
    "electron.vite.config.ts"
  ],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "types": ["node"],
    "paths": {
      "@main/*": ["src/main/*"],
      "@shared/*": ["src/shared/*"],
      "@infrastructure/*": ["src/main/infrastructure/*"]
    }
  }
}
